{
	"main": "srcs/server.js",
	"name": "fastify-server",
	"version": "1.0.0",
	"description": "Fastify server for Matcha application",
	"dependencies": {
		"fastify": "^5.6.1",
		"pg": "^8.16.3"
	},
	"devDependencies": {
		"@types/node": "^24.9.1",
		"@types/pg": "^8.15.5",
		"ts-node": "^10.9.2",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.9.3"
	},
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only --watch ./srcs ./srcs/server.ts",
		"build": "tsc -p tsconfig.json",
		"start": "node ./srcs/server.js",
		"db:create": "tsx ./scripts/create-database.ts",
		"db:drop": "tsx ./scripts/drop-database.ts",
		"db:migrate": "tsx ./scripts/migrate.ts",
		"db:seed": "tsx ./scripts/seed-database.ts"
	}
}
